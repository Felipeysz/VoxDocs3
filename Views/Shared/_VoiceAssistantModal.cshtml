@* Views/Shared/_VoiceAssistantModal.cshtml *@

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="modal fade" id="assistantModal" tabindex="-1" data-bs-backdrop="false" data-bs-keyboard="false" aria-labelledby="assistantModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="assistantModalLabel">Assistente de Voz</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body d-flex flex-column align-items-center justify-content-center">
        <div class="assistant-card">
          <span class="material-symbols-outlined libras-icon">hearing</span>
          <img src="~/img/VoxDox sem fundo.png" alt="Logo" class="logo" />
          <div class="title">Assistente de Voz</div>
          <div class="subtitle" id="subtitle-modal">Segure para gravar</div>
          <button class="microphone-btn" id="mic-btn-modal" type="button">
            <span class="material-symbols-outlined icon">mic</span>
            <span id="btn-text">Gravar</span>
            <span class="spinner" id="spinner"></span>
          </button>
          <div class="response-box" id="response-modal"></div>
          <div class="footer-note">Inteligência Artificial • VoxDocs 2025</div>
        </div>
      </div>
    </div>
  </div>
</div>
