@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>401 • VoxDocs</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Material Symbols Outlined -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <!-- Google Fonts - Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        :root {
            --color-primary:   #5c3c8a;
            --color-accent:    #774C9E;
            --color-bg-light:  #f4f6f9;
            --shadow:          rgba(0, 0, 0, 0.1);
            --text-dark:       #333;
            --font:            'Poppins', sans-serif;
        }
        * { box-sizing: border-box; }
        body {
            margin: 0; padding: 0;
            font-family: var(--font);
            background: var(--color-bg-light);
            color: var(--text-dark);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .error-card {
            background: #fff;
            border-radius: 0.75rem;
            padding: 2rem;
            max-width: 400px;
            width: 100%;
            text-align: center;
            box-shadow: 0 8px 24px var(--shadow);
        }
        .error-card .code {
            font-size: 3rem;
            font-weight: 700;
            color: var(--color-accent);
            margin-bottom: 0.5rem;
        }
        .error-card .message {
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }
        .error-card .support {
            font-size: 0.95rem;
            margin-bottom: 1.5rem;
            color: #666;
        }
        .error-card .countdown {
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
        }
        .error-card .btn-login {
            background-color: var(--color-accent);
            color: #fff;
            border-radius: 2rem;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            text-decoration: none;
            transition: background 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .error-card .btn-login:hover {
            background-color: var(--color-primary);
        }
    </style>
</head>
<body>

    <!-- VLibras Plugin -->
    <div vw class="enabled">
        <div vw-access-button class="active"></div>
        <div vw-plugin-wrapper><div class="vw-plugin-top-wrapper"></div></div>
    </div>
    <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
    <script> new window.VLibras.Widget('https://vlibras.gov.br/app'); </script>

    <div class="error-card">
        <div class="code">401</div>
        <div class="message">Você não está logado</div>
        <div class="support">
            Por favor, faça o login e retorne a esta página.
        </div>
        <div class="countdown">
            Redirecionando para o login em <span id="timer">5</span>s...
        </div>
        <a href="/Login" class="btn-login">
            <span class="material-symbols-outlined">login</span>
            Ir para Login
        </a>
    </div>

    <script>
        let sec = 5;
        const el = document.getElementById('timer');
        const iv = setInterval(() => {
            sec--;
            el.textContent = sec;
            if (sec <= 0) {
                clearInterval(iv);
                window.location.href = '/Login';
            }
        }, 1000);
    </script>
</body>
</html>
