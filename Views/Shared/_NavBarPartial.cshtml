@* Views/Shared/_NavbarPartial.cshtml *@
@using Microsoft.AspNetCore.Authentication.Cookies
@inject IHttpContextAccessor HttpContextAccessor
@{
    var user = HttpContextAccessor.HttpContext.User;
    bool isAuthenticated = user.Identity?.IsAuthenticated ?? false;
    bool isAdmin = isAuthenticated && user.HasClaim("PermissionAccount", "admin");

    // Detecta controller e action atuais
    var routeData = Context.GetRouteData();
    var currentController = routeData.Values["controller"]?.ToString();
    var currentAction = routeData.Values["action"]?.ToString();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<nav id="mainNavbar" class="navbar navbar-expand-lg bg-white shadow-sm">
  <div class="container">
    <a class="navbar-brand" asp-controller="IndexMvc" asp-action="Index">
      <img src="~/img/VoxDox sem fundo.png" alt="VoxDocs Logo" style="max-width:55px;" />
    </a>
    <button class="navbar-toggler" type="button"
            data-bs-toggle="offcanvas" data-bs-target="#mobileMenu"
            aria-controls="mobileMenu" aria-label="Abrir menu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item">
          <a class="nav-link @(currentController == "IndexMvc" && currentAction == "Index" ? "active" : "")"
             asp-controller="IndexMvc" asp-action="Index">Início</a>
        </li>

        @if (isAuthenticated)
        {
          <li class="nav-item">
            <a class="nav-link @(currentController == "DocumentosPaginaMvc" && currentAction == "DocumentosPagina" ? "active" : "")"
               asp-controller="DocumentosPaginaMvc" asp-action="DocumentosPagina">Documentos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link @(currentController == "DocumentosMvc" && currentAction == "Upload" ? "active" : "")"
               asp-controller="DocumentosMvc" asp-action="UploadDocumentos">Upload</a>
          </li>
        }

        <li class="nav-item dropdown ps-3">
          <a class="nav-link dropdown-toggle" href="#"
             id="userDropdown" role="button"
             data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png"
                 class="rounded-circle" width="32" alt="Usuário" />
          </a>
          <ul class="dropdown-menu dropdown-menu-end shadow-sm"
              aria-labelledby="userDropdown">
            @if (isAuthenticated)
            {
              <li>
                <a class="dropdown-item @(currentController == "UserInfoMvc" ? "active" : "")"
                   asp-controller="UserInfoMvc" asp-action="MeuPerfil">
                  Meu Perfil
                </a>
              </li>
            }
            @if (isAuthenticated && isAdmin)
            {
              <li>
                <a class="dropdown-item @(currentController == "AdminMvc" ? "active" : "")"
                   asp-controller="AdminMvc" asp-action="Dashboard">
                  Dashboard
                </a>
              </li>
            }
            @if (isAuthenticated)
            {
                <li><hr class="dropdown-divider" /></li>
            }
            @if (!isAuthenticated)
            {
              <li>
                <a class="dropdown-item text-danger" asp-controller="LoginMvc" asp-action="Login">
                  Login
                </a>
              </li>
            }
            else
            {
              <li>
                <form asp-controller="NavbarMvc" asp-action="Logout" method="post">
                  @Html.AntiForgeryToken()
                  <button type="submit" class="dropdown-item text-danger">
                    Sair
                  </button>
                </form>
              </li>
            }
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

@if (TempData["LogoutError"] != null)
{
    <div class="alert alert-danger text-center mb-0" role="alert">
        @TempData["LogoutError"]
    </div>
}

<!-- Offcanvas Menu para Mobile -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="mobileMenuLabel">
      <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png"
           class="rounded-circle" width="48" alt="Usuário" />
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link @(currentController == "IndexMvc" && currentAction == "Index" ? "active" : "")"
           asp-controller="IndexMvc" asp-action="Index">Início</a>
      </li>
      @if (isAuthenticated)
      {
        <li class="nav-item">
          <a class="nav-link @(currentController == "DocumentosPaginaMvc" && currentAction == "DocumentosPagina" ? "active" : "")"
             asp-controller="DocumentosPaginaMvc" asp-action="DocumentosPagina">Documentos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link @(currentController == "DocumentosMvc" && currentAction == "Upload" ? "active" : "")"
             asp-controller="DocumentosMvc" asp-action="UploadDocumentos">Upload</a>
        </li>
      }
      <li><hr class="dropdown-divider" /></li>
      @if (isAuthenticated)
      {
        <li class="nav-item">
          <a class="nav-link @(currentController == "UserInfoMvc" ? "active" : "")"
             asp-controller="UserInfoMvc" asp-action="MeuPerfil">Meu Perfil</a>
        </li>
      }
      @if (isAuthenticated && isAdmin)
      {
        <li class="nav-item">
          <a class="nav-link @(currentController == "AdminMvc" ? "active" : "")"
             asp-controller="AdminMvc" asp-action="Dashboard">Dashboard</a>
        </li>
      }
      <li class="nav-item">
        @if (!isAuthenticated)
        {
          <a class="nav-link text-danger" asp-controller="LoginMvc" asp-action="Login">Login</a>
        }
        else
        {
          <form asp-controller="NavbarMvc" asp-action="Logout" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="nav-link text-danger btn btn-link">Sair</button>
          </form>
        }
      </li>
    </ul>
  </div>
</div>

<style>
  :root {
    --color-primary: #774C9E;
    --shadow: rgba(0,0,0,0.1);
  }

  #mainNavbar {
    position: static;
    top: 0;
    width: 100%;
    background: #fff;
    z-index: 1050;
    box-shadow: 0 2px 6px var(--shadow);
    animation: fadeInDown 0.6s;
  }

  .nav-link {
    color: #555;
    font-weight: 500;
    transition: color .3s, transform .3s;
  }
  .nav-link:hover {
    color: var(--color-primary);
    transform: scale(1.05);
  }
  .nav-link.active {
    color: var(--color-primary) !important;
    font-weight: 600;
  }
  .navbar-toggler-icon {
    filter: invert(36%) sepia(8%) saturate(3337%) hue-rotate(255deg)
            brightness(95%) contrast(95%);
  }

  .offcanvas-body .nav-link {
    font-size: 1.1rem;
    padding: 0.75rem;
  }
  .offcanvas-body .nav-link.active {
    color: var(--color-primary);
    font-weight: bold;
  }
</style>