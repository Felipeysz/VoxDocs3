@* Footer parcial *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<footer class="footer py-2">
    <div class="container">
        <div class="row gy-2 align-items-center">
            <div class="col-6 col-md-3">
                <h6 class="footer-title mb-1">VoxDocs</h6>
                <p class="footer-text small mb-0">Plataforma de documentos.</p>
            </div>
            <div class="col-6 col-md-3">
                <h6 class="footer-title mb-1">Links</h6>
                <ul class="list-inline mb-0">
                    <li class="list-inline-item"><a asp-controller="Home" asp-action="Sobre" class="small">Sobre</a></li>
                    <li class="list-inline-item"><a asp-controller="Home" asp-action="Ajuda" class="small">Ajuda</a></li>
                </ul>
            </div>
            <div class="col-6 col-md-3">
                <h6 class="footer-title mb-1">Contato</h6>
                <p class="footer-text small mb-0">contato@voxdocs.com</p>
            </div>
            <div class="col-6 col-md-3 text-md-end">
                <div class="footer-social">
                    <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="me-2"><i class="bi bi-twitter"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col text-center">
                <p class="footer-text xsmall mb-0">&copy; @DateTime.Now.Year VoxDocs. Todos os direitos reservados.</p>
            </div>
        </div>
    </div>
</footer>

<style>
:root {
    --footer-bg: #f9f9f9;
    --footer-color: #666;
    --footer-accent: #774C9E;
    --footer-link: #555;
    --footer-link-hover: #6CD3DC;
}

/* Footer fixo só em telas grandes */
.footer {
    background: var(--footer-bg);
    color: var(--footer-color);
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    z-index: 5;
    font-size: 1rem;
    box-shadow: 0 -2px 12px #0001;
}

/* Footer estático em telas pequenas */
@@media (max-width: 576px) {
    .footer {
        position: static !important;
        box-shadow: none;
    }
}

.footer-title {
    color: var(--footer-accent);
    font-size: 0.9rem;
    margin-bottom: 0;
}

.footer-text {
    color: var(--footer-color);
}

.footer-social a {
    color: var(--footer-link);
    font-size: 1rem;
    transition: color .2s;
}

.footer-social a:hover {
    color: var(--footer-link-hover);
}

/* Espaço para o footer fixo só em telas grandes */
body {
    padding-bottom: 4rem;
}
@@media (max-width: 576px) {
    body {
        padding-bottom: 0 !important;
    }
}
</style>