<div class="modal fade" id="tokenModal" tabindex="-1" aria-labelledby="tokenModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-body-tertiary border border-1 border-secondary-subtle rounded-4 shadow-lg animate__animated animate__zoomIn">
      <div class="modal-header bg-secondary text-white border-bottom-0 rounded-top-4 px-5 py-4">
        <h5 class="modal-title d-flex align-items-center gap-3 fs-4 m-0" id="tokenModalLabel">
          <span class="material-symbols-outlined fs-4">vpn_key</span>
          Inserir Código
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body px-5 py-4">
        <input
          type="text"
          class="form-control form-control-lg rounded-3 mb-4 border-secondary-subtle shadow-sm fs-5"
          placeholder="Digite seu código de acesso"
          id="codigoInput"
        />
        <button
          class="btn btn-dark btn-lg w-100 rounded-3 fw-semibold fs-5 py-3"
          onclick="confirmarCodigo()"
        >
          Confirmar
        </button>
      </div>
    </div>
  </div>
</div>
